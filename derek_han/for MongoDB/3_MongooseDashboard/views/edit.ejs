<!DOCTYPE html>
<html>
    <head>
        <title>Survey Form</title>

    </head>
    <body>
        <h1>Edit Dogi's Info</h1>
        <form action="/dogs/<%= dogs._id %>" method="POST">
            <label for="name">Name from <%= dogs.name %> to : </label>
            <input type="text" name="name" id="name">
            
            <label for="age">Age from <%= dogs.age %> to : </label>
            <input type="text" name="age" id="age">

            <label for="color">Color from <%= dogs.color %> to : </label>
            <input type="text" name="color" id="color">

            <label for="type">Type from <%= dogs.type %> to : </label>
            <input type="text" name="type" id="type">
            
            <input id="button1" type="submit" value="Edit my dogi's info">
        </form>
       
        <% if(messages.registration) { %>
            <% for (var x of messages.registration) { %>
                <h3><%= x %></h3>
            <% } %>
        <% } %>
    </body>
</html>
